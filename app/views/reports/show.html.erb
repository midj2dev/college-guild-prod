<div class="report-show">
  <h2><%= @report.title %> <%= button_to "Delete Report", { action: "destroy" }, form_class: "btn btn-danger button-to-button", data: { confirm: 'Are you sure?' }, method: :delete %></h2>
  <div class="col-sm-6">
    <h3><%= @report.model %>s</h3>
    <% @report.query[0].each do |k,v| %>
      <p><%= v["attribute"] %> <strong><%= v["comparison"] %></strong> <%= v["value"] %></p>
    <% end %>
  </div><br>
  <div class="col-sm-4">
    <strong><%= @result_records.length %> record(s) found</strong>
  </div>
</div>

<div class="col-sm-12">
  <%= report_table(@report.model, @result_records) %>
</div>

<div></div>

<script type="text/javascript">
  $(document).ready(function(){
    $("#record-datatable").DataTable({});
  });
</script>
