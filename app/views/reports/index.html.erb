<button class="btn-lg btn-primary" id="new-report-link">
  <%= link_to "New Report", new_report_path %>
</button> 

<table id="datatable-reports" class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>Title</td>
      <td>Record Type</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr class="table-row">
        <td><%= report[0]%></td>
        <td><%= report[1] %></td>
        <td><%= link_to "Report Details", report_path(report[3]), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function(){
    $("#datatable-reports").DataTable({});
  })
</script>