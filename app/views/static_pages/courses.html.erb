<% provide :title, "Course Overview" %>

<button class="btn-lg btn-primary new-course-button">
	<%= link_to "New Course", new_course_path %>
</button>

<h3 style="text-align: center;">Course Overview</h3>

<% @courses.each_with_index do |course, i| %>
	<% if (i+1) % 3 == 0 %>
		<div class="col-sm-12"></div>
	<% end %>
	<div class="col-sm-4 ">
		<div class="course-box">
			<h4><%= link_to course.title, edit_course_path(course) %></h4>
			<% course.sub_courses.each do |sub_course| %>
				<p><%= sub_course %></p>
			<% end %>
		</div>
	</div>
<% end %>